{
  "name": "react-native-document-scanner",
  "version": "3.0.5",
  "description": "Scan documents, automatic border detection",
  "main": "src/index.tsx",
  "files": [
    "/android",
    "!/android/build",
    "/ios",
    "/src",
    "/lib",
    "/*.podspec",
    "react-native.config.js"
  ],
  "scripts": {
    "test": "jest",
    "ci:test": "jest --passWithNoTests",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn",
    "prepare": "bob build",
    "ci:publish": "semantic-release",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react-native",
    "react-native-component",
    "scanner",
    "ios",
    "android",
    "camera"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/VictorAugustoDn/react-native-document-scanner/"
  },
  "author": "Woonivers (https://woonivers.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VictorAugustoDn/react-native-document-scanner/issues"
  },
  "homepage": "https://github.com/VictorAugustoDn/react-native-document-scanner/#readme",
  "dependencies": {
    "@babel/runtime": "^7.21.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.14"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@react-native-community/bob": "^0.17.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/react": "^18.0.30",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "babel-jest": "^29.7.0",
    "babel-preset-react-native": "^4.0.1",
    "commitlint": "^19.3.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.4.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "release-it": "^17.5.0",
    "typescript": "^5.5.3",
    "semantic-release": "^24.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn eslint --fix",
      "git add"
    ],
    "*.java": [
      "cd android && ./gradlew spotlessApply",
      "git add"
    ]
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "module",
      "typescript"
    ],
    "files": [
      "src/"
    ]
  }
}
